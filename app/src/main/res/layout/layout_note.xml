<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
	
	<androidx.cardview.widget.CardView
			app:cardBackgroundColor="@color/WhiteSmoke"
			app:cardCornerRadius="5dp"
			android:layout_margin="@dimen/common_padding_ten"
			app:layout_constraintTop_toTopOf="parent"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
		
		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="start"
				android:padding="@dimen/common_padding_five"
				android:orientation="vertical">
			
			<TextView
					app:layout_constraintTop_toTopOf="parent"
					android:textStyle="bold"
					android:visibility="visible"
					android:id="@+id/author"
					android:textColor="@color/black"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="@dimen/semi_medium_text"/>
			
			<TextView
					android:id="@+id/verse"
					android:textColor="@color/black"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textSize="@dimen/medium_text"/>
			
			
			<TextView
					android:id="@+id/note"
					android:textColor="@color/DimGray"
					android:layout_width="match_parent"
					android:layout_marginTop="@dimen/common_padding_five"
					android:textStyle="bold"
					android:layout_height="wrap_content"
					android:textSize="@dimen/small_text"/>
			
			<TextView
					android:id="@+id/folderName"
					android:textColor="@color/white"
					android:layout_width="wrap_content"
					android:layout_marginTop="@dimen/common_padding_five"
					android:textStyle="bold"
					android:padding="@dimen/common_padding_five"
					android:background="@color/Gray"
					android:layout_height="wrap_content"
					android:textSize="@dimen/small_text"/>
			
			<LinearLayout android:layout_width="wrap_content"
			              android:layout_gravity="end"
			              android:layout_height="wrap_content"
			              android:orientation="horizontal">
				<ImageView
						android:id="@+id/ivEdit"
						android:src="@drawable/ic_mode_edit"
						android:layout_width="wrap_content"
						android:padding="@dimen/common_padding_five"
						android:layout_height="wrap_content"/>
				<ImageView
						android:id="@+id/ivDelete"
						android:layout_gravity="end"
						android:padding="@dimen/common_padding_five"
						android:src="@drawable/ic_delete_red"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"/>
			</LinearLayout>
		</LinearLayout>
	
	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>